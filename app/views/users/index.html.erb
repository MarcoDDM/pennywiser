<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,700;0,900;1,300;1,400&family=Lilita+One&family=Lobster&display=swap" rel="stylesheet">


<style>
/* Estilos en l√≠nea */
body {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  height: 70vh;
  margin: 0;
}

.splash-screen {
  text-align: center;
}

.large-black-text {
  font-family: Lobster, 'Lato', sans-serif; 
  font-size: 68px;
  color: black;
}

.log-btn, .sign-btn {
  font-size: 18px;
  width: 370px;
  background-color: #007bff;
  padding: 10px;
  text-align: center;
  margin-bottom: 20px; /* Espacio entre los botones */
}

.log-btn a {
  color: white;
  text-decoration: none;
}

.sign-btn {
  background-color: #ffffff;
  border: 0px solid black;
}

.sign-btn a { 
  color: black;
  text-decoration: none;
}

.buttons-container {
      position: absolute;
      bottom: 0;
    }
</style>
</head>
<body>
<main class="splash-screen">
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>  
<div class="app-name">
  <h1 class="large-black-text">PennyWise</h1>
</div>  
</main>
<div class="buttons-container">
<div class="button-wrapper">
  <button class="log-btn">
    <%= link_to('LOG IN', new_user_session_path) %>
  </button>
</div>
<div class="button-wrapper">
  <button class="sign-btn">
    <%= link_to('SIGN UP', new_user_registration_path) %>
  </button>
</div>
</div>
</body>